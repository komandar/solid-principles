root = true

#################################################
; common
#################################################

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

#################################################
; golang
#################################################

[{*.go,go.mod}]
indent_style = tab

#################################################
; JSON
#################################################

[*.json]
indent_size = 2

#################################################
; make
#################################################

[{Makefile,makefile}]
indent_style = tab

#################################################
; markdown
#################################################

[*.md]
trim_trailing_whitespace = false

#################################################
; YAML
#################################################

[*.{yml,yaml}]
indent_size = 2
